{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@pos/*": ["./src/modules/pos/*"],
      "@dashboard/*": ["./src/modules/dashboard/*"],
      "@auth/*": ["./src/modules/auth/*"]
    }
  }
}
